{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",        // aseg√∫rate de tener esto
    "skipLibCheck": true,         // omite chequeos de tipos en node_modules
    "types": ["react", "react-native"],  
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
